meta {
  name: Login
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/accounts/login
  body: json
  auth: none
}

body:json {
  {
    "email": "user@example.com",
    "password": "Password123!"
  }
}

script:post-response {
  if (res.status === 200) {
    bru.setEnvVar("token", res.body.accessToken);
    bru.setEnvVar("refreshToken", res.body.refreshToken);
  }
}
